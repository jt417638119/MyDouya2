<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--全屏的样式 -->
    <style name="AppTheme.NoActionBar.FullScreen">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="tv_m_blue_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_blue</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_m_grey_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_grey</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tv_s_grey_sl">
        <item name="android:textSize">@dimen/txt_s</item>
        <item name="android:textColor">@color/cw_grey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_m_black_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_grey_hint_black_txt_bg_white">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/cw_grey</item>
        <item name="android:background">@color/cw_white</item>
    </style>

</resources>
